# EC2 Database Configuration
# Copy this file to .env.ec2 and fill in your actual values

# EC2 Database Settings
EC2_DATABASE_HOST=your-ec2-instance.amazonaws.com
EC2_DATABASE_PORT=3306
EC2_DATABASE_USER=your_database_user
EC2_DATABASE_PASSWORD=your_database_password
EC2_DATABASE_NAME=your_database_name

# EC2 Instance Settings
EC2_INSTANCE_ID=i-xxxxxxxxx
EC2_REGION=us-east-1
EC2_KEY_NAME=your-key-pair-name

# SSH Settings (if needed)
EC2_SSH_USER=ec2-user
EC2_SSH_KEY_PATH=~/.ssh/your-key.pem

# Backup Settings
BACKUP_RETENTION_DAYS=7
BACKUP_S3_BUCKET=your-backup-bucket

# Migration Settings
MIGRATION_BATCH_SIZE=1000
MIGRATION_TIMEOUT=300000